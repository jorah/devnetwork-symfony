{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Theme</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ theme.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('theme_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('theme_edit', { 'id': theme.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
