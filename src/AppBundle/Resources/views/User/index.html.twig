{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-md-offset-1">


            <h1>Users list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Job</th>
                        <th>Bio</th>
                        <th>Createdat</th>
                        <th>Updatedat</th>
                        <th>Theme</th>
                        <th>Img</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>
                                {%- if user.job is not empty%}
                                {%- for job in user %}
                                aaa
                                {%- endfor %}
                                {%- endif %}
                            </td>
                            <td>{{ user.bio }}</td>
                            <td>{% if user.createdAt %}{{ user.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
{#                            <td>{{ user.theme }}</td>#}
                            <td>{{ user.img }}</td>
                            <td>{% if user.status %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
{% endblock %}
