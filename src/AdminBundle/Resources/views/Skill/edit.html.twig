{% extends 'AdminBundle::layout.html.twig' %}

{%- block body %}

<div class="row">
    <div class="col-md-12">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
        {{ form_end(edit_form) }}
        <p>
            <code>{{ entity.id }}</code> <br />
            <code>{{ entity.name }}</code> <br />
            <code>{{ entity.image }}</code> <br />
        </p>
        <img src="{{ asset('skill/'~image) }}" alt="{{ asset('skill') }}" />
    </div>
    <div class="col-md-12">
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}
        <input type="submit" value="Delete" />
        {{ form_end(delete_form) }}
    </div>
</div>



{%- endblock %}
