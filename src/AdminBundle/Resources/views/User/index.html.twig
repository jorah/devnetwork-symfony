{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group">
                    {%- set attrs = ['id', 'lastLogin'] %}
                    {%- for attr in attrs %}
                    {{ knp_pagination_sortable(entities, attr|capitalize, 'u.'~attr, {sort : entities.isSorted('u.'~attr)}) }}
                    {%- endfor %}
                </div>
                <div class="btn-group">
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <ul class="pagination">{{ knp_pagination_render(entities) }} </ul>
                </div>
                <div class="btn-group">
                    <span class="badge">{{ entities.getTotalItemCount }}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="table">
                <tbody>
                    {%- for entity in entities %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_user', {'id': entity.id}) }}">{{ entity.username }}</a>
                        </td>
                    </tr>
                    
                    {%- endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
